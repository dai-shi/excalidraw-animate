{
  "name": "excalidraw-animate",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@excalidraw/excalidraw": "^0.8.0",
    "perfect-freehand": "0.4.71"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.12.0",
    "@testing-library/react": "11.2.7",
    "@types/dom-mediacapture-record": "1.0.7",
    "@types/react": "17.0.6",
    "@types/react-dom": "17.0.5",
    "browser-fs-access": "0.17.2",
    "crypto": "^1.0.1",
    "jest-canvas-mock": "2.3.1",
    "prettier": "2.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "4.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "yarn run test:all",
    "test:all": "yarn run test:type && yarn run test:lint && yarn run test:format && yarn run test:app --watchAll=false",
    "test:type": "tsc",
    "test:lint": "eslint --max-warnings=0 --ext .js,.ts,.tsx .",
    "test:format": "prettier 'src/*.(js|ts|tsx|css|scss)' --list-different",
    "test:app": "react-scripts test --passWithNoTests"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(roughjs|points-on-curve|path-data-parser|points-on-path|browser-fs-access)/)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
